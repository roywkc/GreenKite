                    <img style="height:100px"  src="https://whub-assets.s3.amazonaws.com/uploads/981/0d0/f67/2b9/7c3/efe/c1d/563/bd5/9fc/95d06638cad0188c3272fa4bcdbd8015.png"%>
                  <% else %> 
                    <img src="https://finhack.io/images/people/gram-milosevic.jpg">
                  <% end %>
              </figure>
              <div class="content">
                  <h3><%= company.name %></h3>
                  <p><%= company.description %></p>
                  <p><%= company.end_date %></p>
              </div>
            </div>
            <% end %>
          <% end %>
      <% end %>
    </div>
