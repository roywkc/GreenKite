          <%= link_to  company  do%>
            <div class="item">
              <figure class="cover">
                  <% if index == 1 %>
                    <img style="height:100px" src="https://whub-assets.s3.amazonaws.com/uploads/272/aaa/f42/9b6/b7e/72c/4d8/4fe/09e/75e/60b95d153c133eca31b300ff09b3a26e.png">
