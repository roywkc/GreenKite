                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTGgSdHHjwvnVLf_bxK2RukITKIByQay1-ewFN8GsfgkLRbi-NdUg"%>
                      <% else %> 
                        <img src="https://finhack.io/images/people/gram-milosevic.jpg">
                      <% end %>
                  </figure>
                  <div class="content">
                      <h3><%= company.name %></h3>
                      <p><%= company.description %></p>
                      <p><%= company.end_date %></p>
                  </div>
          </div>
          <% end %>
      <% end %>
    </div>
